<%= render(Primer::OpenProject::TreeView::SubTree.new(path: path, expanded: true, select_variant: select_variant, node_variant: :div)) do |tree| %>
  <% next if params[:empty] == "true" %>
  <% entries.each do |label, type| %>
    <% case type %>
    <% when :directory %>
      <% tree.with_sub_tree(label: label, select_variant: select_variant) do |sub_tree| %>
        <% sub_tree.with_leading_visual_icons do |icons| %>
          <% icons.with_expanded_icon(icon: :"file-directory-open-fill", color: :accent) %>
          <% icons.with_collapsed_icon(icon: :"file-directory-fill", color: :accent) %>
        <% end %>

        <% if loader == :skeleton %>
          <% sub_tree.with_loading_skeleton(src: tree_view_items_path(loader: "skeleton", select_variant: select_variant)) %>
        <% else %>
          <% sub_tree.with_loading_spinner(src: tree_view_items_path(loader: "spinner", select_variant: select_variant)) %>
        <% end %>
      <% end %>
    <% when :file %>
      <% tree.with_leaf(label: label, select_variant: select_variant) do |item| %>
        <% item.with_leading_visual_icon(icon: :file) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
