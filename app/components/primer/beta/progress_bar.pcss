/* Progress */

.Progress {
  display: flex;
  height: 8px;
  overflow: hidden;
  background-color: var(--color-neutral-muted);
  border-radius: 6px;
  outline: 1px solid transparent; /* Support Firefox custom colors */
}

.Progress--large {
  height: 10px;
}

.Progress--small {
  height: 5px;
}

.Progress-item {
  outline: 2px solid transparent; /* Support Firefox custom colors */
}

.Progress-item + .Progress-item {
  margin-left: 2px;
}
