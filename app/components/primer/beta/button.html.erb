<%= render Primer::ConditionalWrapper.new(condition: tooltip.present?, tag: :div, classes: "Button-withTooltip") do -%>
  <%= render Primer::Beta::BaseButton.new(**@system_arguments) do -%>
    <span class="Button-content <%= @align_content_classes %>">
      <% if leading_visual %>
        <span class="Button-visual Button-leadingVisual">
          <%= leading_visual %>
        </span>
      <% end %>
      <span class="Button-label"><%= trimmed_content %></span>
      <% if trailing_visual %>
        <span class="Button-visual Button-trailingVisual">
          <%= trailing_visual %>
        </span>
      <% end %>
    </span>
    <% if @dropdown %>
      <span class="Button-visual Button-trailingAction">
        <%= primer_octicon("triangle-down") %>
      </span>
    <% end %>
    <%= tooltip %>
  <% end -%>
<% end -%>
