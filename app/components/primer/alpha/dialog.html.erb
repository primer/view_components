<%= show_button %>
<dialog-helper>
  <%= render Primer::BaseComponent.new(**@system_arguments) do %>
    <%= header %>
    <% if content.present? %>
      <%= content %>
    <% else %>
      <scrollable-region data-labelled-by="<%= labelledby %>">
        <%= body %>
      </scrollable-region>
      <%= footer %>
    <% end %>
  <% end %>
</dialog-helper>
