<%= render Primer::BaseComponent.new(**@system_arguments) do %>
  <% if @align == :right %>
    <%= actions %>
  <% end %>
  <% tabs.each do |tab| %>
    <%= tab %>
  <% end %>
  <% if @align == :left %>
    <%= actions %>
  <% end %>
  <% tabs.each do |tab| %>
    <%= tab.panel %>
  <% end %>
<% end %>
