<% if form_required? %>
  <%= form_with(url: @action, method: @http_method, **@form_arguments) do %>
    <% if render_inputs? %>
      <% @inputs.each do |input_arguments| %>
        <%= render(Primer::BaseComponent.new(tag: :input, **input_arguments)) %>
      <% end %>
    <% end %>
    <%= content %>
  <% end %>
<% else %>
  <%= content %>
<% end %>
