<%= show_button %>

<%= render Primer::BaseComponent.new(**@system_arguments) do %>
  <%= render Primer::BaseComponent.new(tag: :div, classes: @wrapper_classes) do %>
    <%= header %>
    <% if content.present? %>
      <%= content %>
    <% else %>
      <%= body %>
      <%= footer %>
    <% end %>
  <% end %>
<% end %>
