<%= render details_component do %>
  <%= render summary.component do %>
    <%= summary.content %>
  <% end %>

  <%= render select_menu_component do %>
    <%= render modal_component do %>
      <% if header %>
        <%= render header.wrapper_component do %>
          <%= render header.title_component do %>
            <%= header.content %>
          <% end %>

          <% if header.closeable? %>
            <%= render header.close_button_component do %>
              <%= render header.close_button_icon %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <% if filter %>
        <%= render filter.wrapper_component do %>
          <%= render filter.input_component %>
          <%= filter.content %>
        <% end %>
      <% end %>

      <%= render list_component do %>
        <% if message.present? %>
          <%= render message_component do %>
            <%= message %>
          <% end %>
        <% end %>

        <% if loading? %>
          <div class="SelectMenu-loading">
            <%= content %>
          </div>
        <% elsif blankslate? %>
          <div class="SelectMenu-blankslate">
            <%= content %>
          </div>
        <% else %>
          <%= content %>
        <% end %>

        <% items.each do |item| %>
          <%= render item.wrapper_component do %>
            <% if icon_el = item.icon_component %>
              <%= render icon_el %>
            <% end %>
            <%= item.content %>
          <% end %>

          <% if item.divider.is_a?(String) %>
            <%= render item.divider_component do %>
              <%= item.divider %>
            <% end %>
          <% elsif item.divider %>
            <%= render item.divider_component %>
          <% end %>
        <% end %>
      <% end %>

      <% if footer %>
        <%= render footer.component do %>
          <%= footer.content %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
