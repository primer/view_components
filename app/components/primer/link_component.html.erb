<% if tooltip.present? %>
  <%= render Primer::BaseComponent.new(tag: :span, position: :relative) do %>
    <%= render Primer::BaseComponent.new(**@system_arguments) do %>
      <% content %>
    <% end %>
    <%= tooltip %>
  <% end %>
<% else %>
  <%= render Primer::BaseComponent.new(**@system_arguments) do %>
    <% content %>
  <% end %>
<% end %>
