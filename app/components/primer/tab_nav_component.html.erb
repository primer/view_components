<%= wrapper(with_panel: @with_panel, **@wrapper_arguments) do %>
  <%= render Primer::BaseComponent.new(**@system_arguments) do %>
    <%= extra if @align == :left %>

    <%= render Primer::BaseComponent.new(**@body_arguments) do %>
      <% tabs.each do |tab| %>
        <%= tab %>
      <% end %>
    <% end %>

    <%= extra if @align == :right %>
  <% end %>

  <% if @with_panel %>
    <% tabs.each do |tab| %>
      <%= tab.panel %>
    <% end %>
  <% end %>
<% end %>
