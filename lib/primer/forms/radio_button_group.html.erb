<fieldset>
  <% if @input.label %>
    <%= content_tag(:legend, **@input.label_arguments) do %>
      <%= @input.label %>
    <% end %>
  <% end %>
  <%= render(SpacingWrapper.new) do %>
    <% @input.radio_buttons.each do |radio_button| %>
      <%= render(radio_button.to_component) %>
    <% end %>
  <% end %>
</fieldset>
