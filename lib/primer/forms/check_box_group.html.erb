<%= content_tag(:fieldset, hidden: @input.hidden?) do %>
  <% if @input.label %>
    <%= content_tag(:legend, **@input.label_arguments) do %>
      <%= @input.label %>
    <% end %>
  <% end %>
  <%= render(SpacingWrapper.new) do %>
    <% @input.check_boxes.each do |check_box| %>
      <%= render(check_box.to_component) %>
    <% end %>
  <% end %>
<% end %>
