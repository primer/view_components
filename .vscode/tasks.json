// These settings will update along with git. In order to change them locally
// without committing those changes, you need to tell git to begin ignoring them.
//
// to stop using defaults: git update-index --skip-worktree .vscode/tasks.json
// go back to using defaults: git update-index --no-skip-worktree .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "script/dev: run development apps",
      "type": "shell",
      "group": "build",
      "command": "./script/dev",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "runOptions": {
        "reevaluateOnRerun": false
      },
      "problemMatcher": []
    },
    {
      "label": "bundle exec rake: run current test file",
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "command": "TEST=${file} bundle exec rake",
      "problemMatcher": {
        "owner": "ruby",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^.+#.+L\\d+ \\[(.+):(\\d+)\\]:$",
          "file": 1,
          "line": 2
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "runOptions": {
        "reevaluateOnRerun": false
      }
    },
    {
      "label": "bundle exec rake: run all tests",
      "type": "shell",
      "group": "test",
      "command": "bundle exec rake",
      "problemMatcher": {
        "owner": "ruby",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^.+#.+L\\d+ \\[(.+):(\\d+)\\]:$",
          "file": 1,
          "line": 2
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "runOptions": {
        "reevaluateOnRerun": false
      }
    },
    {
      "label": "docs:build: build docs",
      "type": "shell",
      "group": "build",
      "command": "bundle exec rake docs:build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "runOptions": {
        "reevaluateOnRerun": false
      },
      "problemMatcher": []
    },
    {
      "label": "docs:preview: build previews",
      "type": "shell",
      "group": "build",
      "command": "bundle exec rake docs:preview",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "runOptions": {
        "reevaluateOnRerun": false
      },
      "problemMatcher": []
    },
    {
      "label": "statuses:dump: dump static files",
      "type": "shell",
      "group": "build",
      "command": "bundle exec rake statuses:dump",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "runOptions": {
        "reevaluateOnRerun": false
      },
      "problemMatcher": []
    }
    {
      "label": "constants:dump: dump static files",
      "type": "shell",
      "group": "build",
      "command": "bundle exec rake constants:dump",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "runOptions": {
        "reevaluateOnRerun": false
      },
      "problemMatcher": []
    },
    {
      "label": "rubocop: autofix rubocop errors",
      "type": "shell",
      "group": "build",
      "command": "bundle exec rubocop -a",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "runOptions": {
        "reevaluateOnRerun": false
      },
      "problemMatcher": []
    },
    {
      "label": "erblint: autofix erblint errors",
      "type": "shell",
      "group": "build",
      "command": "bundle exec erblint -a app/components",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "runOptions": {
        "reevaluateOnRerun": false
      },
      "problemMatcher": []
    },
    {
      "label": "yarn: build assets",
      "type": "shell",
      "group": "build",
      "command": "yarn",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "runOptions": {
        "reevaluateOnRerun": false
      },
      "problemMatcher": []
    },
    {
      "label": "lint:fix: fix eslint errors",
      "type": "shell",
      "group": "build",
      "command": "yarn lint:fix",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "runOptions": {
        "reevaluateOnRerun": false
      },
      "problemMatcher": []
    },
  ]
}
