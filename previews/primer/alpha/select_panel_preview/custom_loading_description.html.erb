  <% panel.with_show_button { "Sci-fi equipment" } %>
  <% panel.with_footer(show_divider: true) do %>
    I'm a footer!
  <% end %>
<% end %>

<%= render partial: "primer/alpha/select_panel_preview/interaction_subject_js", locals: { subject_id: subject_id } %>
