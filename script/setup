#!/bin/bash

# Gems
bundle install --path vendor/bundle
yarn install

# Set up demo
pushd demo
bundle install --path vendor/bundle
yarn install
popd

# Set up lookbook
pushd lookbook
bundle install --path vendor/bundle
yarn install
yarn build:css
popd

pushd ../css
yarn install
popd

# Set up docs
pushd docs
yarn install
popd

# Initial build of docs content
bundle exec rake docs:build
